@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Customers";
}

<div class="">
    <table border="1" cellspacing="0" cellpadding="0" width="200" height=auto>
        <tr>
            <td>Product Id</td>
            <td>Product Name</td>
            <td>Product Price</td>
        </tr>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Name</td>
                <td>@m.Price</td>
            </tr>
        }
    </table>
</div>
