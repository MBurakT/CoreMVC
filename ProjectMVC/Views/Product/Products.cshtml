@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Products";
}

<div>
    <table id="products" width="100%" height="100%">
        <tr>
            <td>Product Name</td>
            <td>Product Price</td>
            <td></td>
        </tr>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.Price</td>
                <td align="center">
                    <a asp-controller="Operation" asp-action="Details">Details</a>&nbsp;&nbsp;&nbsp;&nbsp;
                    <a asp-controller="Operation" asp-action="Edit">Edit</a>&nbsp;&nbsp;&nbsp;&nbsp;
                    <a asp-controller="Operation" asp-action="Delete">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
